@model tsakosFolio.ViewModels.ImageListViewModel

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width"/>
        <title>Tsakos Folio</title>
    </head>

    <body>
        <h1>@Model.CurrentFolder</h1>
        @foreach (var image in Model.Images)
        {
            <div>
            <h1>@image.Name</h1>
            <h2>@image.ShortDescription</h2>
            <h3>@image.LongDescription</h3>
            <h2>@image.Folder.Name</h2>
            <br />

            </div>
        }

    </body>
</html>